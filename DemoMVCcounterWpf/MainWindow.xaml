<Window x:Class="DemoMVCcounterWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoMVCcounterWpf"
        mc:Ignorable="d"
 Title="Demo MVC Counter" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="200"/>
            <Setter Property="Padding" Value="20" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Padding" Value="20" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Name="number" Text="000" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="increase" Content="Increase" Click="increase_Click"/>
            <Button Name="decrease" Content="Decrease" Click="decrease_Click"/>
            <Button Name="reset" Content="Reset" Click="reset_Click"/>
            <Button Name="resetToMax" Content="Reset To Max" Click="resetToMax_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
